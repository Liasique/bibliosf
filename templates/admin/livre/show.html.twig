{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>
    <table class="table table-boardered">
        <tbody >
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
             <tr>
                <th>Auteur</th>
              <td>{{ livre.auteur.prenom ~" "~ livre.auteur.nom }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ livre.resume }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                <td>{{ livre.couverture }}</td>
            </tr>
           <tr>
           <th>Genre</th>
             <td>
               {% for genre in livre.genres %}
                    {{ genre.libelle ~ "," }}
               {% endfor %}
                </td>
           </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-between">
    <a href="{{ path('app_admin_livre_index') }}" class="btn btn-primary " ><i class="bi-flesh-return-left"></i>Retour</a>
        
    <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}">Modifier</a>
</div>

    {{ include('admin/livre/_delete_form.html.twig') }}
{% endblock %}
